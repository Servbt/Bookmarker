<%- include("./components/navbar.ejs")%>
<body>
        <h1 class="test">My Reviews Page</h1>
        <!-- Log out button -->
        <form action="/api/user/logout" method="POST">
            <button type="submit" class="btn btn-primary logout">Log Out</button>
        </form>

        <!-- recommended books -->
        <% if (locals.reviews) { %>
            <!-- set an number for the func to go through array -->
            <% let numb = -1 %>
            <% reviews.forEach(review=> { %>
            <% numb++ %>
            <div>
                <h1 class="book-title">
                    <%= bookData[numb].volumeInfo.title %>
                    <p class="visually-hidden book-ID">
                        <%= review.book %>
                    </p>
                </h1>
                <img src="<%= bookData[numb].volumeInfo.imageLinks.thumbnail %>" class="book-image" alt="book cover">
                    
                </img >
            </div>

                <% }); %>
                    <% } %>


                    <%- include("../utils/bookIDfind.ejs") %>

    </body>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"

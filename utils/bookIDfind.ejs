<script>
    // POST request made for google api for finding single books with given ID
    $(function () {
        $(document).on("click", ".book-card", function (e) {
            var pID = $(this).find(".book-id").text();
            $.post("https://fierce-falls-25436-cd1145098578.herokuapp.com/dashboard/singleBook", { "book": pID },
                function (data, status) {
                    // // Use the response data (HTML) to replace the current document
                    document.open();
                    document.write(data);
                    document.close();
                });
        });
    });
</script>